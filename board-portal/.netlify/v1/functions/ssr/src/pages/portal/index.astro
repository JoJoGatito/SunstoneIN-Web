---
import PortalLayout from '../../layouts/PortalLayout.astro';
---

<PortalLayout title="Home">
  <h1 class="text-2xl font-bold mb-6">Welcome to the Board Portal</h1>
  
  <div class="bg-white shadow rounded-lg p-6">
    <p class="mb-4">This portal provides access to:</p>
    <ul class="list-disc pl-5 space-y-2">
      <li>
        <a href="/portal/contacts" class="text-indigo-600 hover:underline">Board Contacts</a>
        - View and add contact information for board members and key stakeholders
      </li>
      <li>
        <a href="/portal/forum" class="text-indigo-600 hover:underline">Discussion Forum</a>
        - Participate in board discussions and communications
      </li>
    </ul>
  </div>
</PortalLayout>